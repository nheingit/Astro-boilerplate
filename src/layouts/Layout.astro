---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { Card } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Button } from "@/components/ui/button";
import { Twitter, Github, Linkedin, Rss } from "lucide-react"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="max-w-6xl mx-auto px-4 py-8 flex flex-col lg:flex-row gap-8">
			<main class="lg:w-2/3">
				<slot />
			</main>
			<aside class="lg:w-1/3 space-y-6 lg:sticky lg:top-8 lg:self-start">
				<Card className="p-4">
					<h2 class="text-xl font-semibold mb-2">About the author</h2>
					<p>
						Hi there. I'm Noah Hein: an AI engineer, educator, and founding engineer at Smol AI. 
						I'm passionate about bridging the gap between traditional software engineering and AI. 
						I co-created a 3-week AI fundamentals course with <a href="https://www.latent.space/" target="_blank" rel="noopener noreferrer" class="underline hover:text-primary transition-colors">Latent Space</a>, 
						aimed at helping software engineers transition into AI engineering. You can find more 
						about the course <a href="https://buttondown.com/ai4eng" target="_blank" rel="noopener noreferrer" class="underline hover:text-primary transition-colors">here</a>.
					</p>
				</Card>
				<Card className="p-4">
					<h2 class="text-xl font-semibold mb-2">Connect with me</h2>
					<div class="flex justify-around">
					  <a href="https://x.com/TheNoahHein" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary transition-colors">
						<Twitter size={24} />
						<span class="sr-only">Twitter</span>
					  </a>
					  <a href="https://github.com/nheingit" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary transition-colors">
						<Github size={24} />
						<span class="sr-only">GitHub</span>
					  </a>
					  <a href="https://www.linkedin.com/in/noah-hein-6a8b12124/" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary transition-colors">
						<Linkedin size={24} />
						<span class="sr-only">LinkedIn</span>
					  </a>
					</div>
				</Card>
				<Card className="p-4">
					<h2 class="text-xl font-semibold mb-2">
						Subscribe to my newsletter
					</h2>
					<p class="mb-4">
						Get a monthly roundup of everything I've written.
					</p>
					<form class="space-y-2">
						<Input type="email" placeholder="your@lovely.email" />
						<Button className="w-full">SUBSCRIBE!</Button>
					</form>
				</Card>
			</aside>
		</div>
	</body>
</html>
